<!--search.wxml-->
<scroll-view scroll-y  bindscrolltolower="requestDataList" style="height: 500px;">
  <!--搜索-->
  <view class="index_head">
    <navigator class="index_head_txt" url="/pages/search/search" >请输入区域，版块或楼盘</navigator>
  </view>
  <!--nav-->
  <view class="index_nav">
    <ul wx:for="{{indexNav}}" wx:key="indexNav">
      <li>
        <span>{{item.img}}</span>
        <span>{{item.text}}</span>
      </li>
    </ul>
  </view>
  <!--轮播-->
  <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
    <block wx:for="{{imgUrls}}" wx:key="indexImgs">
      <swiper-item>
        <image src="{{item}}" class="slide-image" width="355" height="150"/>
      </swiper-item>
    </block>
  </swiper>
  <!--主体-->
  <div class="index-con" style="background-color: #fff">
    <ul class="index-con-t">
      <li >
        <image src="{{item.coverImage.url}}"></image>
        <view class="index-con-c">
          <em class="index-con-title">00</em>
          <i class="index-con-address">00</i>
          <view class="index-con-price">
            <em>均价¥</em> <i>00</i>
          </view>
        </view>
      </li>
    </ul>
    <ul class="index-con-m">
        <li class="cf" wx:for="{{dataList}}" wx:key="indexCon">
          <image class="lf" src="{{item.coverImage.url}}"></image>
          <view class="index-con-mc rt">
            <em class="index-con-mc-title">{{item.name}}</em>
            <i class="index-con-mc-address">{{item.mark}}</i>
            <view class="index-con-mc-price">
              <em>均价¥</em> <i>{{item.averagePrice}}</i>
            </view>
          </view>
        </li>
      </ul>
  </div>
</scroll-view>
