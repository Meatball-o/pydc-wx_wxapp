/**index.wxss**/
.index_head {
  width: 750rpx;
  background: red;
  height: 160rpx;
  box-sizing: border-box;
  padding-top: 50rpx;
}

.index_head .index_head_txt {
  width: 72%;
  background: #fff;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 30rpx;
  margin-left: 14%;
  text-align: center;
}
.index_nav ul{
  width: 100%;
}
.index_nav ul li{
  width: 25%;
  display: inline-block;
  text-align: center;
}
.slide-image{
  width: 100%;
  height: 300rpx;
}
.index-con-m li{
  display: block;
  margin-bottom: 10rpx;
}
.index-con-m image{
  width: 40%;
  height: 288rpx;
}
.index-con-m .index-con-mc{
  width: 60%;
  height: 288rpx;
  box-sizing: border-box;
  padding: 20rpx;
  box-shadow: 2px 0px 5px #aaa;
}
.index-con-mc-title{
  font-size: 26rpx;
}
.index-con-mc-address{
  display: block;
  color: #666;
  font-size: 26rpx;
  padding: 100rpx 0 20rpx 0;
}
.index-con-mc-price{
  color: red;
  font-size: 24rpx;
}
.index-con-mc-price i{
  font-size: 30rpx;
}