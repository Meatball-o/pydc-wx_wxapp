.search-con{
  width: 100%;
  height: 88rpx;
  box-sizing: border-box;
  padding-top: 7px;
  background-color: #eee;
}
.search-con input{
  width: 78%;
  background-color: #fff;
  margin-left: 5%;
  box-sizing: border-box;
  padding:  0 20rpx;
  height: 54rpx;
  line-height:54rpx;
  border-top-left-radius:6rpx;
  border-bottom-left-radius:6rpx;
  border: 1px solid #ccc;
}
.search-con view{
  width: 12%;
  background-color: #fff;
  box-sizing: border-box;
  height: 54rpx;
  text-align: center;
  line-height:52rpx;
  font-size: 26rpx;
  border-top-right-radius:6rpx;
  border-bottom-right-radius:6rpx;
  margin-left: -8rpx;
  border: 1px solid #ccc;
}