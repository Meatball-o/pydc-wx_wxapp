.index-con-c .index-con-title{
  display: inline-block;
  font-size: 26rpx;
}
.index-con-c .index-con-address{
  display: block;
  font-size: 24rpx;
  margin: 8rpx 0 12rpx 0;
  color: #666;
}
.index-con-c .index-con-price{
  display: inline-block;
  font-size: 24rpx;
  color: red;
}
.index-con-c .index-con-price i{
  font-size: 30rpx;
}
.index-con-t li:nth-child(2n-1){
  margin-right: 2%;
}