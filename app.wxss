/**app.wxss 公用css**/
page{
  font-size:28rpx;
  background-color: #f3f3f3;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}

.lf {
  float: left;
}
.rt {
  float: right;
}

.cf:after {
  content: "";
  display: table;
  height: 0;
  clear: both;
  visibility: hidden;
}
/*列表*/
.index-con{
  width: 100%;
  box-sizing: border-box;
  padding-left: 2%;
  padding-right: 2%;
  display: block;
  margin-top: 16rpx;
}
.index-con .index-con-t{
  display: block;
}
.index-con .index-con-t li{
  display: inline-block;
  width: 49%;
  margin-bottom: 15rpx;
  background-color: #fff;
}
.index-con .index-con-t li image{
  width: 100%;
  height: 360rpx;
}
